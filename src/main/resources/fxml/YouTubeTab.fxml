<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<Tab xmlns="http://javafx.com/javafx"
     xmlns:fx="http://javafx.com/fxml"
     fx:controller="yousync.ui.YouTubeTabController"
     fx:id="youTubeTab" text="YouTube">
    <SplitPane fx:id="splitPane" dividerPositions="0.22" prefHeight="160.0" prefWidth="200.0">
        <AnchorPane fx:id="leftPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <children>
                <!--TODO: REMOVE HARDCODED CREDENTIALS-->
                <Label layoutX="9.0" layoutY="117.0" prefHeight="17.0" prefWidth="54.0"
                       text="Playlist ID" textAlignment="CENTER"/>
                <TextField fx:id="playlistIdBox" layoutX="9.0" layoutY="134.0" prefHeight="25.0"
                           prefWidth="136.0" promptText="Insert Playlist ID"
                           text="PLbIpTxTjHTL6S-tvQiDWvwsUlsQA-0nlM"/>
                <Button fx:id="loadButton" layoutX="53.0" layoutY="170.0" mnemonicParsing="false"
                        text="Load"/>
                <Button fx:id="downloadButton" layoutX="103.0" layoutY="170.0" mnemonicParsing="false"
                        text="Download"/>
                <Label layoutX="9.0" layoutY="16.0" prefHeight="17.0" prefWidth="54.0" text="Client ID"
                       textAlignment="CENTER"/>
                <PasswordField fx:id="clientIdBox" layoutX="9.0" layoutY="33.0" prefHeight="25.0"
                               prefWidth="136.0" promptText="Insert Client ID"
                               text="1013785771047-jcgetkp7in2a3a7igad332tc2mc3ur4t.apps.googleusercontent.com"/>
                <Label layoutX="9.0" layoutY="65.0" prefHeight="17.0" prefWidth="72.0"
                       text="Client Secret" textAlignment="CENTER"/>
                <PasswordField fx:id="clientSecretBox" layoutX="9.0" layoutY="82.0" prefHeight="25.0"
                               prefWidth="136.0" promptText="Insert Client Secret"
                               text="JOmS1O2PLuJYw_FG8HjG6xyc"/>
            </children>
        </AnchorPane>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <TableView fx:id="tableView">
                <columns>
                    <TableColumn fx:id="image" text="Cover">
                        <cellValueFactory>
                            <PropertyValueFactory property="imageView"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="artist" text="Artist">
                        <cellValueFactory>
                            <PropertyValueFactory property="artist"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="title" text="Title">
                        <cellValueFactory>
                            <PropertyValueFactory property="title"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="selected">
                        <cellValueFactory>
                            <PropertyValueFactory property="checkBox"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </ScrollPane>
    </SplitPane>
</Tab>

